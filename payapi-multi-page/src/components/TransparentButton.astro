---
type Props = {
  Element: "button" | "a";
  customClasses: string;
  href?: string;
};

const { Element, customClasses, href } = Astro.props;
---

<Element
  class=`${customClasses ? customClasses : ""} inline-block border-solid border-2 px-8 py-3 rounded-full transition-all hover:font-semibold`
  href={href}><slot /></Element
>
