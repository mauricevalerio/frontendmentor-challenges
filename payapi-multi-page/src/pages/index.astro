---
import Layout from "@/layouts/Layout.astro";
import BgCircle from "@/layouts/BgCircle.astro";
import Padding from "@/layouts/Padding.astro";
import Hero from "@/components/home/Hero.astro";
import Customers from "@/components/home/Customers.astro";
import Features from "@/components/home/Features.astro";
import { getCollection } from "astro:content";

const homeCollection = await getCollection("home");

const { heroHeader, heroImgPath, heroImgAlt, customerHeader, customerIntro } =
  homeCollection[0].data;
---

<Layout
  title="PayAPI Home"
  bgCirclePosition="-top-[15%] -right-[10%] max-md:-top-[25%] max-md:-right-[0]"
>
  <Hero
    slot="header-overlap"
    heroHeader={heroHeader}
    heroImgPath={heroImgPath}
    heroImgAlt={heroImgAlt}
  />

  <BgCircle bgColor="bg-sec-mirage-blue" position="-top-[100%] -left-[20%]">
    <Padding>
      <Customers
        customerHeader={customerHeader}
        customerIntro={customerIntro}
      />
    </Padding>
  </BgCircle>

  <BgCircle position="top-[25%] -right-[25%]">
    <Padding>
      <Features />
    </Padding>
  </BgCircle>
</Layout>
