---
import Layout from "@/layouts/Layout.astro";
import MissionVision from "@/components/about/MissionVision.astro";
import CulturePeople from "@/components/about/CulturePeople.astro";
import BgCircle from "@/layouts/BgCircle.astro";
import { getCollection } from "astro:content";

const aboutCollection = await getCollection("about");

const { header, gridContentUpper, imgAlt, companyMetrics, gridContentLower } =
  aboutCollection[0].data;
---

<Layout
  title="PayAPI About"
  bgCirclePosition="-top-[600px] -right-[200px] max-md:-top-[500px] max-md:-right-[500px]"
>
  <MissionVision
    slot="header-overlap"
    header={header}
    gridContentUpper={gridContentUpper}
  />

  <BgCircle
    bgColor="bg-pr-water-white"
    position="max-md:hidden -top-[5%] -left-[40%]"
  >
    <CulturePeople
      imgAlt={imgAlt}
      companyMetrics={companyMetrics}
      gridContentLower={gridContentLower}
    />
  </BgCircle>
</Layout>
