---
import Layout from "@/layouts/Layout.astro";
import MissionVision from "@/components/about/MissionVision.astro";
import CulturePeople from "@/components/about/CulturePeople.astro";
import BgCircle from "@/layouts/BgCircle.astro";
import { getCollection } from "astro:content";

const aboutCollection = await getCollection("about");

const {
  header,
  gridContentUpper,
  desktopImgPath,
  tabletImgPath,
  mobileImgPath,
  imgAlt,
  companyMetrics,
  gridContentLower,
} = aboutCollection[0].data;
---

<Layout title="PayAPI About" bgCirclePosition="-top-[75%] -right-[10%]">
  <MissionVision
    slot="header-overlap"
    header={header}
    gridContentUpper={gridContentUpper}
  />

  <BgCircle bgColor="bg-pr-water-white" position="-top-[5%] -left-[40%]">
    <CulturePeople
      desktopImgPath={desktopImgPath}
      tabletImgPath={tabletImgPath}
      mobileImgPath={mobileImgPath}
      imgAlt={imgAlt}
      companyMetrics={companyMetrics}
      gridContentLower={gridContentLower}
    />
  </BgCircle>
</Layout>
