---
import "../styles/base.css";
import BgCircle from "@/layouts/BgCircle.astro";
import Padding from "@/layouts/Padding.astro";
import Header from "@/components/Header.astro";
import ReadyToStart from "@/components/ReadyToStart.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title: string;
  bgCirclePosition: string;
}

const { title, bgCirclePosition } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-pr-water-white min-h-screen">
    <BgCircle bgColor="bg-pr-water-white" position={bgCirclePosition}>
      <Padding>
        <Header />
      </Padding>
      <slot name="header-overlap" />
    </BgCircle>
    <slot />

    <Padding>
      <ReadyToStart />
    </Padding>

    <div class="mt-auto">
      <BgCircle
        bgColor="bg-sec-mirage-blue"
        position="-top-[100%] -right-[20%]"
      >
        <Padding>
          <Footer />
        </Padding>
      </BgCircle>
    </div>
  </body>
</html>
